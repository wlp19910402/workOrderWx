<view class="page">
	<view class="page-body">
		<view class="page-section page-section-spacing swiper">
			<swiper indicator-dots="{{indicatorDots}}" indicator-active-color="#ffffff" indicator-color="rgba(255,255,255,0.4)" autoplay="{{autoplay}}" interval="{{interval}}" circular="{{circular}}" duration="{{duration}}">
				<block wx:for="{{background}}" wx:key="*this">
					<swiper-item>
						<image class="qm-swiper-img" src="{{item}}"></image>
					</swiper-item>
				</block>
			</swiper>
		</view>
	</view>
	<mp-row>
		<mp-col class="qm-col" wx:for="{{homeMenuModule}}" wx:key="*this" offset="{{0}}" span="{{12}}">
			<view bindtap="clickHomeMenu" data-id="{{item.id}}" class="qm-col-content">
				<text class="{{'qm-home-menu-img iconfont '+item.icon}}"></text>
				<text class="qm-home-menu-text">{{item.name}}</text>
			</view>
		</mp-col>
	</mp-row>
	<view class="t-space" wx:if="{{totalData>0&&isAdmin}}" bindtap="jumpPdList">
		<mp-cells>
			<mp-cell link>
				<view style="display: inline-block; vertical-align: middle;font-size:32rpx;">待接单工单</view>
				<mp-badge content="{{totalData}}" style="margin-left: 5px;" />
				<view slot="footer">
					<view style="display: inline-block;vertical-align:middle; font-size: 28rpx;">查看工单列表</view>
				</view>
			</mp-cell>
		</mp-cells>
	</view>
	<!-- https://lingyun.labsmart.cn/wx-api/work-order/my-maintain-list/pd?pageSize=10&pageNo=1 -->
	<view class="t-space all-padding qm-ad-bannder-box">
		<view wx:for="{{adBannder}}" wx:key="*this" class="{{index===0?'qm-ad-bannder':'t-space qm-ad-bannder'}}">
			<image class="qm-ad-bannder-img" mode="scaleToFill" src="{{item}}" />
		</view>
	</view>
</view>

<qm-set-user-auth />