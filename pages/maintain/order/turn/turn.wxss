/* 侧边栏样式 */

.qm-page-slidebar {
  height: 100%;
  width: 640rpx;
  position: fixed;
  box-sizing: border-box;
  padding: 40rpx 0 20rpx;
  background-color: #f1f5f7;
  z-index: 2;
  right: 0;
  top: 0;
  overflow: auto;
}

.qm-page-slidebar-bg {
  background: rgba(0, 0, 0, 0.4);
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  z-index: 2;
}

.qm-page-title {
  position: fixed;
  right: 0;
  top: 0;
  width: 640rpx;
  background: #f1f5f7;
  text-align: center;
  line-height: 64rpx;
  color: #222222;
  font-size: 32rpx
}

